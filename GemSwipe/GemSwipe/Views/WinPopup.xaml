<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GemSwipe.Views.WinPopup">
  <ContentView.Content>
      <StackLayout BackgroundColor="CornflowerBlue">
          <Label Font="Bold" FontSize="30" HorizontalTextAlignment="Center" Margin="25" Text="SkiaRoot Over" />
            <Label Font="Bold" FontSize="40" HorizontalTextAlignment="Center" Margin="10" Text="Score" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,15">
                <Button x:Name="BackButton" Text="Back" Clicked="BackButton_OnClicked"></Button>
                <Button x:Name="RetryButton"  Text="Retry" Clicked="RetryButton_OnClicked" ></Button>
                <Button x:Name="NextButton"  Text="Next" Clicked="NextButton_OnClicked" ></Button>
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>